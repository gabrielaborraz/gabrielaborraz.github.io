---
const { slug } = Astro.params;

import { getLocaleFromUrl, useTranslations } from "../../../utils/i18n/utils";

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const title = t(`portfolio.project.${slug}.title`);
const description = t(`portfolio.project.${slug}.description`);

import Layout from "../../../layouts/Layout.astro";

export const getStaticPaths = async () => {
  return [
    { params: { slug: "palabras-magicas", locale: undefined } },
    { params: { slug: "palabras-magicas", locale: 'en' } },
    { params: { slug: "mpk", locale: undefined } },
    { params: { slug: "mpk", locale: 'en' } },
    { params: { slug: "tales-milly-cohen", locale: undefined } },
    { params: { slug: "tales-milly-cohen", locale: 'en' } },
    { params: { slug: "viola-fermin-rdz", locale: undefined } },
    { params: { slug: "viola-fermin-rdz", locale: 'en' } },
  ];
};
---
<Layout title={title} description={description} active="portfolio">
  Portfolio project {slug}
</Layout>
