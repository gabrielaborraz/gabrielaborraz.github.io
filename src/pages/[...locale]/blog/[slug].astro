---
const { locale, slug } = Astro.params;

import Layout from "../../../layouts/Layout.astro";
import { getLocaleFromUrl, useTranslations } from "../../utils/i18n/utils";

const t = useTranslations(locale);

export const getStaticPaths = async () => {
  return [
    { params: { slug: "welcome", locale: undefined } },
    { params: { slug: "welcome", locale: 'en' } },
    { params: { slug: "animation-superpowers", locale: undefined } },
    { params: { slug: "animation-superpowers", locale: 'en' } },
  ];
};
---
<Layout title={t(`blog.post.${slug}.title`)}  description={t(`blog.post.${slug}.description`)} active="blog">
  {slug}
  {locale}
</Layout>
