---
import { getStaticPaths } from "../../utils/staticPaths";
import { getLocaleFromUrl, useTranslations } from "../../utils/i18n/utils";

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

import Layout from "../../layouts/Layout.astro";


export { getStaticPaths };
---
<Layout title={t('home.title')} description={t('home.description')}>
  <section class="hero">
    <h2 class="text-xlarge">
      Las ideas cobran vida
      <span>para comunicar / inspirar / conectar</span>
    </h2>
  </section>
</Layout>