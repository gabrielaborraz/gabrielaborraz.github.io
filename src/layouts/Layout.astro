---
const { title, description, active } = Astro.props;

import { getLocaleFromUrl } from "../utils/i18n/utils";
import '/src/styles/global.scss';

const locale = getLocaleFromUrl(Astro.url);

import Navigation from "../components/Navigation.astro";
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
	description: string;
	active?: string;
}
---

<!DOCTYPE html>
<html lang={locale}>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<meta name="color-scheme" content="light">
		<link rel="stylesheet" href="/splide.min.css">
		<link rel="stylesheet" href="/normalize.css">

		<link rel="icon" type="image/svg+xml" href="/favicon.svg">
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#4162FF">

		<!-- Slider -->
		<script is:inline src="/splide.min.js"></script>

		<!-- Metadata -->
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="theme-color" content="#ffffff">
		<meta name="description" content={description}>

		<!-- Title -->
		<title>{title}</title>
	</head>
	<body>
		<header class="header">
			<Navigation locale={locale} active={active} />

			<slot name="hero" />
		</header>

		<main class="main">
			<slot />
		</main>

		<Footer />

		<script src="/src/scripts/main.js"></script>
		<script src="/src/scripts/newsletter.js"></script>
	</body>
</html>